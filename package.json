{
  "name": "noeesparsa.com",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "biome": "biome check --write",
    "biome:staged": "tsc --noEmit --skipLibCheck && biome check --files-ignore-unknown=true --no-errors-on-unmatched",
    "biome:ci": "biome ci",
    "preview": "vite preview",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "lucide-react": "^0.525.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@tailwindcss/vite": "^4.0.17",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "clsx": "^2.1.1",
    "commitlint": "^19.8.0",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "tailwindcss": "^4.0.17",
    "tw-animate-css": "^1.3.5",
    "typescript": "~5.7.2",
    "vite": "6.3.4"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": ["pnpm biome:staged"]
  }
}
